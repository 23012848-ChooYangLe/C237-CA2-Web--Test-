<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Fitness Tracker App</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <br>
        <div class="text-center"><h2>List of Members</h2></div>
        <br>
      
        <table class="table table-hover small text-center">
          <thead>
              <tr>
                <th width="90" style="background-color: aquamarine;">Member ID</th>
                <th width="100" style="background-color: aquamarine;">Name</th>
                <th width="100" style="background-color: aquamarine;">Image</th>
                <th width="100" style="background-color: aquamarine;">Contact</th>
                <th width="100" style="background-color: aquamarine;">Email</th>
                <th width="100" style="background-color: aquamarine;"></th>
                <th width="100" style="background-color: aquamarine;"></th>
              </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < members.length; i++) { %>
              <tr>
                <td><a href="/members/<%= members[i].memberId %>"><%= members[i].memberId %></a></td>
                <td><%= members[i].memberName %></td>
                <td><img src="<%= members[i].image %>" width="45%"></td>
                <td><%= members[i].contact %></td>
                <td><%= members[i].email %></td>
                <td><a href="/members/<%= members[i].memberId %>/edit" ><button>Edit</button></a></td>
                <td><a href="/members/<%= members[i].memberId %>/delete" 
                  onclick="return confirm('Are you sure you want to remove this Member?')"><button>Delete</button></a></td>
              </tr> 
            <% } %>
          </tbody>
        </table>
    </div>
</body>
</html>