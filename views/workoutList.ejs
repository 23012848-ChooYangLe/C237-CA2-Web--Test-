<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Fitness Tracker App</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <br>
        <div class="text-center"><h2>List of Exercises</h2></div>
        <br>
      
        <table class="table table-hover small text-center">
          <thead>
              <tr>
                <th width="100">Workout Name</th>
                <th width="100">Workout Image</th>
                <th width="50">Main Muscle Group</th>
              </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < exercises.length; i++) { %>
              <tr>
                <td><a href="/exercise/<%= exercises[i].exerciseId %>"><%= exercises[i].exerciseName %></a></td>
                <td><img src="<%= exercises[i].image %>" width="40%"></td>
                <td><%= exercises[i].mainly %></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>


</body>
</html>