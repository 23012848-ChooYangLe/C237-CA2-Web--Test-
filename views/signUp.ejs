<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Fitness Tracker app</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-3">
        <h2>Create an account</h2>
        <form action="signUp" method="POST" enctype="multipart/form-data">
            <div class="mb-3 mt-3">
                <label for="memberName">Userame:</label>
                <input type="text" class="form-control" id="memberName" placeholder="Enter your name" name="memberName">
            </div>
            <div class="mb-3 mt-3">
                <label for="contact">Phone Number:</label>
                <input type="number" class="form-control" id="contact" placeholder="Enter phone number" name="contact">
            </div>
            <label for="image">Image:</label><br>
                <input type="file" id="image" name="image" accept="image/*" required><br>
            <div class="mb-3 mt-3">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
            </div>
            <div class="mb-3 mt-3">
                <label for="password">Password:</label>
                <input type="text" class="form-control" id="password" placeholder="Enter password" name="password">
            </div><br>
            <div>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </div>
        </form>
        <br>
        <p style="text-align: center;"><a href="/login">Already have an account?</a></p>
    </div>
</body>
</html>