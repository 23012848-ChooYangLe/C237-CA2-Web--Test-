<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Fitness Tracker app</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
      <form action="/createRoutine" method="POST">
        <div class="mb-3 mt-3">
          <label for="routineName">Routine Name:</label>
          <input type="text" class="form-control" id="routineName" name="routineName" required><br><br>
        </div>
        <table class="table table-hover small text-center">
            <thead>
                <tr>
                  <th width="80">Workout Name</th>
                  <th width="100">Workout Image</th>
                  <th width="50">Main Muscle Group</th>
                  <th>Select</th>
                </tr>
            </thead>
            <tbody>
              <% for(let i=0; i < exercises.length; i++) { %>
                <tr>
                  <td><a href="/exercise/<%= exercises[i].exerciseId %>"><%= exercises[i].exerciseName %></a></td>
                  <td><img src="<%= exercises[i].image %>" width="40%"></td>
                  <td><%= exercises[i].mainly %></td>
                  <!-- <td style="width: 10%;">
                    <input type="number"  class="form-control" id="reps" name="reps">
                  </td> -->
                  <td style="width: 20%;">
                    <input type="checkbox" name="exSelected" value="<%= exercises[i].exerciseId %>" style="width: 25px;height: 25px;">
                  </td>
                  
                  
                </tr>
              <% } %>
            </tbody>
          </table><br>
          <div style="text-align: center;">
            <button type="submit" class="btn btn-primary">Create</button>
          </div><br><br>
      </form> 
    </div>
</body>
</html>